@{
    ViewData["Title"] = "Create / Edit";
}

@model ExerciseWebApplication1.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or edit expense</h1>
</div>

<form asp-action="CreateEditExpenseForm" asp-controller="Home">

    <label class ="mt-4">ID</label>
    <input class="from-control" type="number" placeholder="0" asp-for="ID" />

    <label class="mt-4">Value</label>
    <input class="from-control" type="number" placeholder="0" asp-for="Value" step="0.01"/>

    <label class="mt-4">Description</label>
    <input class="from-control" type="text" placeholder="Add a description" asp-for="Description" />

    <button class="btn btn-primary mt4" type="submit">Ok</button>
</form>